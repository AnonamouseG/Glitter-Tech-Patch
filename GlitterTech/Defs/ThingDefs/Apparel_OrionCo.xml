<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

	<ThingDef Name="ApparelBase" Abstract="True">
		<thingClass>Apparel</thingClass>
		<category>Item</category>
		<selectable>True</selectable>
		<pathCost>10</pathCost>
		<useHitPoints>True</useHitPoints>
		<graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
		<drawGUIOverlay>true</drawGUIOverlay>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>1</DeteriorationRate>
			<SellPriceFactor>0.35</SellPriceFactor>
		</statBases>
		<altitudeLayer>Item</altitudeLayer>
		<alwaysHaulable>True</alwaysHaulable>
		<tickerType>Never</tickerType>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<comps>
			<li>
				<compClass>CompForbiddable</compClass>
			</li>
			<li>
				<compClass>CompColorable</compClass>
			</li>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
	</ThingDef>

	<!-- ============= Stuff-less apparel =================-->

	<ThingDef ParentName="ApparelBase">
		<defName>Apparel_CombatVest</defName>
		<label>combat vest</label>
		<description>A standard issue Orion Corporation combat vest. Equiped with more advanced alloys then your usual vest.</description>
		<graphicData>
		<texPath>Things/Pawn/Humanlike/Apparel/VestPlate/VestPlate</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<MarketValue>800</MarketValue>
			<WorkToMake>22000</WorkToMake>
			<ArmorRating_Blunt>0.40</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.80</ArmorRating_Sharp>
		</statBases>
		<costList>
			<SteelBar>80</SteelBar>
			<PlasteelBar>60</PlasteelBar>
			<Silver>70</Silver>			
		</costList>
		<recipeMaker>
			<skillRequirements>
				<li>
					<skill>Crafting</skill>
					<minLevel>6</minLevel>
				</li>
			</skillRequirements>
			<workSpeedStat>SmithingSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Smith</soundWorking>
			<recipeUsers>
				<li>Matterfab</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
		</recipeMaker>
		<equippedStatOffsets>
			<MoveSpeed>-0.02</MoveSpeed>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
			</bodyPartGroups>
			<worngraphicPath>Things/Pawn/Humanlike/Apparel/VestPlate/VestPlate</worngraphicPath>
			<layers>
				<li>Middle</li>
			</layers>
			<commonality>1</commonality>
			<tags>
				<li>OCArmor</li>
			</tags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>6</weight>
					<only>RGBA(0.6,0.6,1,1)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>

